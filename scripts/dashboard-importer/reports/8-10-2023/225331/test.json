{
    "displayName": "Kubernetes cluster monitoring (via Prometheus)",
    "dashboardFilters": [
        {
            "labelKey": "node",
            "templateVariable": "Node",
            "stringValue": "",
            "filterType": "METRIC_LABEL"
        }
    ],
    "mosaicLayout": {
        "columns": 24,
        "tiles": [
            {
                "widget": {
                    "title": "Network I/O pressure",
                    "xyChart": {
                        "dataSets": [
                            {
                                "plotType": "LINE",
                                "timeSeriesQuery": {
                                    "prometheusQuery": "sum (rate (container_network_receive_bytes_total{kubernetes_io_hostname=~\"^${Node.value}$\"}[${__interval}]))"
                                },
                                "legendTemplate": "Received"
                            },
                            {
                                "plotType": "LINE",
                                "timeSeriesQuery": {
                                    "prometheusQuery": "- sum (rate (container_network_transmit_bytes_total{kubernetes_io_hostname=~\"^${Node.value}$\"}[${__interval}]))"
                                },
                                "legendTemplate": "Sent"
                            }
                        ]
                    }
                },
                "xPos": 0,
                "yPos": 0,
                "height": 4,
                "width": 24
            },
            {
                "widget": {
                    "scorecard": {
                        "gaugeView": {
                            "lowerBound": 0,
                            "upperBound": 100
                        },
                        "thresholds": [],
                        "timeSeriesQuery": {
                            "prometheusQuery": "sum (container_memory_working_set_bytes{id=\"/\",kubernetes_io_hostname=~\"^${Node.value}$\"}) / sum (machine_memory_bytes{kubernetes_io_hostname=~\"^${Node.value}$\"}) * 100"
                        }
                    },
                    "title": "Cluster memory usage"
                },
                "xPos": 0,
                "yPos": 4,
                "height": 4,
                "width": 2
            },
            {
                "widget": {
                    "scorecard": {
                        "gaugeView": {
                            "lowerBound": 0,
                            "upperBound": 100
                        },
                        "thresholds": [],
                        "timeSeriesQuery": {
                            "prometheusQuery": "sum (rate (container_cpu_usage_seconds_total{id=\"/\",kubernetes_io_hostname=~\"^${Node.value}$\"}[${__interval}])) / sum (machine_cpu_cores{kubernetes_io_hostname=~\"^${Node.value}$\"}) * 100"
                        }
                    },
                    "title": "Cluster CPU usage ($interval avg)"
                },
                "xPos": 2,
                "yPos": 4,
                "height": 4,
                "width": 2
            },
            {
                "widget": {
                    "scorecard": {
                        "gaugeView": {
                            "lowerBound": 0,
                            "upperBound": 100
                        },
                        "thresholds": [],
                        "timeSeriesQuery": {
                            "prometheusQuery": "sum (container_fs_usage_bytes{device=~\"^/dev/xvda.$\",id=\"/\",kubernetes_io_hostname=~\"^${Node.value}$\"}) / sum (container_fs_limit_bytes{device=~\"^/dev/xvda.$\",id=\"/\",kubernetes_io_hostname=~\"^${Node.value}$\"}) * 100"
                        }
                    },
                    "title": "Cluster filesystem usage"
                },
                "xPos": 4,
                "yPos": 4,
                "height": 4,
                "width": 2
            },
            {
                "widget": {
                    "scorecard": {
